# Application Configuration
APP_ENV=development # development, staging, production
APP_PORT=8081
APP_API_KEY=your-secret-api-key # Key for ASP.NET Core to use

# Logging
LOG_LEVEL=debug # debug, info, warn, error
LOG_FILENAME=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE_DAYS=7

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=youruser
DB_PASSWORD=yourpassword
DB_NAME=yourdb
DB_SSLMODE=disable # require, verify-full, etc.

# Redis (for Asynq)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Firebase
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./path/to/your/serviceAccountKey.json # IMPORTANT: Secure this file!

# Backend API (Your ASP.NET Core Service)
BACKEND_API_URL=http://localhost:5000 # Example: URL of your ASP.NET Core API
BACKEND_API_KEY=your-secret-backend-api-key # Key THIS service uses to call the ASP.NET Core API